<% unless current_user == dish %>
<% if current_user.favpost?(dish) %>
 <%= form_with(model: current_user.favorites.find_by(dish_id: dish.id), local: true, method: :delete) do |f| %>
  <%= hidden_field_tag :dish_id, dish.id %>
  <%= f.submit '好物から外す', class: 'btn btn-danger btn-block' %>
 <% end %>
<% else %>
 <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
 <%= hidden_field_tag :dish_id, dish.id %>
 <%= f.submit '好物に登録', class: 'btn btn-warning btn-block' %>
 <% end %>
<% end %> 
<% end %>
