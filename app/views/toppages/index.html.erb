<% if logged_in? %>

<div class="row">
    

    <div class="col-sm-8">
        <%= render 'dishes/dishes', dishes: @dishes %>
        
    </div>
</div>
<div class="grid">
<%= link_to 'ご飯を投稿する', new_dish_path %>
</div>
<% else %>

<div class="center jumbotron">
    <div class="text-center">
        <h3>素敵なご飯との出会い</h3>
        <div class="grid">
        <h1>Re:dish</h1>
        </div>
        <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
    <div class="text-center mt-2">
        <%= link_to 'テストユーザーはこちら', login_path, class: 'btn btn-lg btn-warning' %>
    </div>
</div>
<% end %>
