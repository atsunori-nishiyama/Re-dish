<% if users.any? %>
<ul class="list-unstyled">
    <% users.each do |user| %>
    <li class="media">
       <div class="media-body">
           <div>
               <% if current_user.image? %>
               <img class="mr-2 rounded-circle" src="<%= user.image.thumb100 %>" alt="">
               <% else %>
                <%= current_user.image.thumb100.url %>
                <% end %>
           </div>
           <div>
               <%= user.name %>
           </div>
           <div>
               <p><%= link_to 'ユーザー詳細', user_path(user) %></p>
           </div>
       </div>
     </li>
    <% end %>
</ul>
<%= paginate users %>
<% end %>
