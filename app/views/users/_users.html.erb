<% if users.any? %>
<ul class="list-unstyled">
    <% users.each do |user| %>
    <li class="media">
       <div class="media-body">
           <div>
                <% if user.image? %>
                <div class="picture-container"><img class="picture mr-2" src="<%= user.image.thumb100 %>" alt=""></div>
                <% else %>
                <div class="picture-container"><img class="picture mr-2" <%= image_tag 'default.jpg' %> alt=""></div>
                <% end %>
               
               
           </div>
           <div>
               <%= user.name %>
           </div>
           <div>
               <p><%= link_to 'ユーザー詳細', user_path(user) %></p>
           </div>
       </div>
     </li>
    <% end %>
</ul>
<%= paginate users %>
<% end %>
