<% if users.any? %>
<ul class="list-unstyled">
    <% users.each do |user| %>
    <li class="media">
       <img class="mr-2 rounded-circle p-3" style="width: 100px;height: 100px;">
       <div class="media-body">
           <div>
               <%= user.name %>
           </div>
           <div>
               <p><%= link_to 'ユーザー詳細', user_path(user) %></p>
           </div>
       </div>
     </li>
    <% end %>
</ul>
<%= paginate users %>
<% end %>
