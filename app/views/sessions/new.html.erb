<div class="text-center">
    <h1>ログイン</h1>
</div>
<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control', value: "test@user.com" %>
        </div>
        <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control', value: "12345678" %>
        </div>
        <p>テストユーザーはそのままログインできます</p>
        <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
        <% end %>
        <p><%= link_to '新規登録はこちら', signup_path %></p>
    </div>
</div>