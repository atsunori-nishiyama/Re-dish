<% if logged_in? %>
<h2>画像を選択してください</h2>
<div class="row">
    <div class="col-sm-6 offset-sm-3"> 
        <%= form_with(model: @dish, local: true) do |f| %>
        <div class="form-group">
            <%= f.file_field :picture %>
        </div>
        <div class="form-group">
            <%= f.label :content, 'コメント内容' %>
            <%= f.text_area :content, class: 'form-control', row: 5  %>
        </div>
        <div class="grid">
        <%= f.submit '投稿する', class: 'btn btn-warning btn-block' %>
        <% end %>
        </div>
        <%= link_to '一覧に戻る', root_url %>
    </div>
</div>

<% end %>